/* pages/details/details.wxss */
page{
  background: linear-gradient(197.99deg, #2C9AFF -14.52%, #9C74F3 16.96%, #EC81B4 54.17%, #F1BC97 74.34%, #F4E283 100%);
  color: white;
  }
  .page{
    width: 100vw;
    height: 100vh;
    overflow-x: hidden;
    position: relative;
  }
  .isHappy{
    background-color: #E5E5E5;
  }
  .isSad{
    background-color: #A2C7FE;
  }
  .back{
    margin-top: 136rpx;
    margin-left: 48rpx;
    display: flex;
    align-items: center;
    text-align: center;
  }
  .back image{
    width: 18rpx;
    height: 32rpx;
  }
  .title{
    width: 476rpx;
    height: 44rpx;
    position: absolute;
    right: 0;
    left: 0;
    margin: auto;
  }
  .time{
    width: 100%;
    font-size: 24px;
    margin-top: 24rpx;
    display: flex; 
    align-items: center;
    justify-content: space-between;
  }
  .btn{
    width: 102rpx;
    height: 48rpx;
    line-height: 48rpx;
    background-color: #FECACA;
    font-size: 14px;
    text-align: center;
    border-radius: 72rpx;
    color: #fff;
  }
  .main{
    margin-top: 48rpx;
    width: 100%-96rpx;
    height: 1214rpx;
    background-color: white ;
    border-radius: 72rpx 72rpx 0rpx 0rpx;
    padding: 48rpx;
  }
  .h1{
    color: rgba(18, 27, 54, 1);
    font-size: 48rpx;
    font-weight: 600;
  }
  .info{
    margin-top: 24rpx;
    width: 100%;
    font-size: 36rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: rgba(18, 27, 54, .6);
  }
  .info input{
    width: 10em;
  }
  .describe{
    margin-top: 60rpx;
  }
  .wrapper{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .content{
    width: 610rpx;
    height: 616rpx;
    text-align: center;
    padding: 22rpx;
    margin-top: 36rpx;
    background: rgba(232, 232, 232, 1);
    border-radius: 36rpx;
    position: relative;
  }
  .content image{
    width: 610rpx;
    height: 616rpx;
    z-index: -1;
    border-radius: 36rpx;
  }
  .input{
    width: 360rpx;
    color: rgba(18, 27, 54, 0.6);
    font-size: 36rpx;
    font-weight: 600;
    display: inline-block;
    position: absolute;
    top: 38rpx;
    right: 0;
    left: 0;
    margin: auto;
  }
  .submit{
    width: 654rpx;
    height: 100rpx;
    margin-top: 120rpx;
    border-radius: 72rpx;
    color: white;
    background-color: #FECACA;
  }
  .other{
    background: rgba(162, 199, 254, 1);
  }
  .contanier .item {
    display: flex;
    align-items: center;
    padding: 20rpx;
  }
  
  .contanier .item .value {
    flex: 1;
    padding: 10rpx 20rpx;
    border: 1px solid #ddd;
    border-radius: 12rpx;
  }
  